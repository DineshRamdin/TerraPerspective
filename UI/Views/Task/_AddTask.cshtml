@{
    Layout = null;
}
@using UI.Resources

<style>
    label {
        margin-bottom: 0; /* Prevents extra spacing under the label */
    }

    input[type="checkbox"] {
        margin: 0; /* Removes any unwanted margin */
    }
</style>
<div class="modal-dialog">
    <form id="frnTaskCreate">
        <input type="hidden" id="hdnId" value="" />
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="h4TaskTitle">
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12 form-group">
                        <label>@SharedResource.Task_Code<span class="red-required">*</span></label>
                        <input type="text" id="txtCode" class="form-control" placeholder=@SharedResource.Task_Code readonly />
                    </div>
                    <div class="col-12 form-group">
                        <label>@SharedResource.Parent_Task<span class="red-required">*</span></label>
                        <select class="form-control" id="ddlParentTask" required></select>
                    </div>
                    <div class="col-12 form-group">
                        <label>@SharedResource.Task_Name<span class="red-required">*</span></label>
                        <input type="text" id="txtTaskName" class="form-control" placeholder=@SharedResource.Task_Name required />
                    </div>
                    <div class="col-12 form-group">
                        <label>@SharedResource.Task_Description<span class="red-required">*</span></label>
                        <textarea type="text" id="txtTaskDescription" class="form-control" placeholder="@SharedResource.Task_Description" required> </textarea>
                    </div>
                    <div class="col-12 form-group">
                        <label>@SharedResource.Projects<span class="red-required">*</span></label>
                        <select class="form-control" id="ddlProjects" required></select>
                    </div>
                    <div class="col-12 form-group">
                        <label>@SharedResource.Status<span class="red-required">*</span></label>
                        <select class="form-control" id="ddlStatus" required></select>
                    </div>
                    <div class="col-12 form-group">
                        <label>@SharedResource.Percentage<span class="red-required">*</span></label>
                        @* <textarea type="text" id="txtStatusDetails" class="form-control" placeholder="@SharedResource.Status_Details" required> </textarea> *@
                        <input type="number" id="txtPercentage" class="form-control" name="percentage" min="0" max="100" placeholder="Enter a number" required />
                    </div>
                    <div class="col-12 form-group">
                        <label>@SharedResource.Start_Date<span class="red-required">*</span></label>
                        <input type="date" id="txtStartDate" class="form-control" placeholder="@SharedResource.Start_Date" required />
                    </div>
                    <div class="col-12 form-group">
                        <label>@SharedResource.End_Date<span class="red-required">*</span></label>
                        <input type="date" id="txtEndDate" class="form-control" placeholder="@SharedResource.End_Date" required />
                    </div>
                    <div class="col-12 row form-group">
                        <div class="col-3 d-flex align-items-center">
                            <label for="chbIsVisible" class="mr-2">@SharedResource.Is_Visible</label>
                            <input type="checkbox" id="chbIsVisible" class="form-control-sm" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="SaveTask();">@SharedResource.Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">@SharedResource.Close</button>
            </div>
        </div>
    </form>
</div>