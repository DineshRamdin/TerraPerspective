@{
    Layout = null;
}
@using UI.Resources


<style>
    label {
        margin-bottom: 0; /* Prevents extra spacing under the label */
    }

    input[type="checkbox"] {
        margin: 0; /* Removes any unwanted margin */
    }
</style>
<div class="modal-dialog">
    <form id="frnCodeConfigurationCreate">
        <input type="hidden" id="hdnId" value="" />
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="h4CodeConfigurationTitle">
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12 form-group">
                        <label>@SharedResource.Name<span class="red-required">*</span></label>
                        <input type="text" id="txtName" class="form-control" placeholder=@SharedResource.Name required />
                    </div>
                    <div class="col-12 form-group">
                        <label>@SharedResource.Date_Format</label>
                        <input type="text" id="txtDateFormate" class="form-control" placeholder="@SharedResource.Date_Format" />
                    </div>
                    <div class="col-12 row form-group">
                        <div class="col-3 d-flex align-items-center">
                            <label for="chbDate" class="mr-2">@SharedResource.Date</label>
                            <input type="checkbox" id="chbDate" class="form-control-sm" />
                        </div>
                    </div>
                    <div class="col-12 form-group">
                        <label>@SharedResource.Month_Format</label>
                        <input type="text" id="txtMonthFormate" class="form-control" placeholder="@SharedResource.Month_Format" />
                    </div>
                    <div class="col-12 row form-group">
                        <div class="col-3 d-flex align-items-center">
                            <label for="chbMonth" class="mr-2">@SharedResource.Month</label>
                            <input type="checkbox" id="chbMonth" class="form-control-sm" />
                        </div>
                    </div>
                    <div class="col-12 form-group">
                        <label>@SharedResource.Year_Format</label>
                        <input type="text" id="txtYearFormate" class="form-control" placeholder="@SharedResource.Year_Format" />
                    </div>
                    <div class="col-12 row form-group">
                        <div class="col-3 d-flex align-items-center">
                            <label for="chbYear" class="mr-2">@SharedResource.Year</label>
                            <input type="checkbox" id="chbYear" class="form-control-sm" />
                        </div>
                    </div>
                    <div class="col-12 form-group">
                        <label>@SharedResource.Reset_Config</label>
                        <input type="text" id="txtReserConfig" class="form-control" placeholder="@SharedResource.Reset_Config" />
                    </div>
                    <div class="col-12 row form-group">
                        <div class="col-3 d-flex align-items-center">
                            <label for="chbYear" class="mr-2">@SharedResource.Reset</label>
                            <input type="checkbox" id="chbReset" class="form-control-sm" />
                        </div>
                    </div>
                    <div class="col-12 row form-group">
                        <div class="col-3 d-flex align-items-center">
                            <label for="chbUsePrefix" class="mr-2">@SharedResource.UsePrefix</label>
                            <input type="checkbox" id="chbUsePrefix" class="form-control-sm" />
                        </div>
                    </div>
                    <div class="col-12 form-group">
                        <label>@SharedResource.Padding_No<span class="red-required">*</span></label>
                        <input type="text" id="txtPaddingNo" class="form-control" placeholder="@SharedResource.Padding_No" required />
                    </div>
                    <div class="col-12 form-group">
                        <label>@SharedResource.Comment</label>
                        <input type="text" id="txtComment" class="form-control" placeholder="@SharedResource.Comment" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="SaveCodeConfiguration();">@SharedResource.Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">@SharedResource.Close</button>
            </div>
        </div>
    </form>
</div>