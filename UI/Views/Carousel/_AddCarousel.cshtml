@{
    Layout = null;
}

<div class="modal-dialog">
    <form id="frnCarouselCreate">
        <input type="hidden" id="hdnId" value="" />
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="h4CarouselTitle">
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12 form-group">
                        <label>Carousel Name<span class="red-required">*</span></label>
                        <input type="text" id="txtCarouselName" class="form-control" placeholder="Carousel Name" required />
                    </div>

                   @*  <div class="col-12 form-group">
                        <label>Header<span class="red-required">*</span></label>
                        <input type="text" id="txtHeader" class="form-control" placeholder="Header" required />
                    </div>

                    <div class="col-12 form-group">
                        <label>Details</label>
                        <textarea type="text" id="txtdetails" class="form-control" placeholder="Details"> </textarea>
                    </div> *@

                    <div class="col-12 form-group">
                        <label>Duration <span class="red-required">*</span></label>
                        <input type="text" id="txtDuration" class="form-control" placeholder="Duration " required />
                    </div>

                    <div class="col-12 row form-group">
                        <div class="col-6">
                            <label>Poster</label>
                            <select class="form-control" id="ddlPoster" required></select>
                        </div>
                        <div class="col-6">
                            <button type="button" class="btn btn-primary" onclick="SavePoster();" style="margin-top: 30px;">Add</button>
                        </div>

                    </div>

                    <div class="col-12 form-group">
                        <div id="GridPoster"></div>
                       @*  <table id="PosterTable"></table> *@
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="SaveCarousel();">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </form>
</div>