@{
	Layout = null;
}
@using UI.Resources

<div class="modal-dialog">
	<form id="frnGlobalParamCreate">
		<input type="hidden" id="hdnGlobalParamId" value="" />
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title" id="h4GlobalParamTitle">
				</h4>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-12 form-group">
						<label>@SharedResource.Name<span class="red-required">*</span></label>
						<input type="text" id="txtName" class="form-control" placeholder="@SharedResource.Name" required />
					</div>
					<div class="col-12 form-group">
						<label>@SharedResource.Value<span class="red-required">*</span></label>
						<input type="text" id="txtValue" class="form-control" placeholder="@SharedResource.Value" required />
					</div>
					<div class="col-12 form-group">
						<label>@SharedResource.Additional_Value</label>
						<input type="text" id="txtAdditionalValue" class="form-control" placeholder="@SharedResource.Additional_Value" />
					</div>
					<div class="col-12 form-group">
						<label>@SharedResource.Comment</label>
						<input type="text" id="txtComment" class="form-control" placeholder="@SharedResource.Comment" maxlength="120" />
					</div>
				</div>
				<div class="row">
					<div class="col-4 form-group">
						<div class="form-group clearfix">
							<div class="icheck-primary d-inline">
								<input type="checkbox" id="AdminOnly">
								<label for="AdminOnly">
									@SharedResource.Admin_Only
								</label>
							</div>
						</div>
					</div>
					<div class="col-3 form-group">
						<div class="form-group clearfix">
							<div class="icheck-primary d-inline">
								<input type="checkbox" id="Enable">
								<label for="Enable">
									@SharedResource.Enable
								</label>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary" onclick="SaveGlobalParam();">@SharedResource.Save</button>
				<button type="button" class="btn btn-default" data-dismiss="modal">@SharedResource.Close</button>
			</div>
		</div>
		<!-- /.modal-content -->
	</form>
</div>