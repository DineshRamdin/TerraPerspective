@{
    Layout = null;
}

<div class="modal-dialog">
    <form id="frnDeviceCreate">
        <input type="hidden" id="hdnId" value="" />
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="h4DeviceTitle">
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12 form-group">
                        <label>Device Name<span class="red-required">*</span></label>
                        <input type="text" id="txtDeviceName" class="form-control" placeholder="Device Name" required />
                    </div>

                    <div class="col-12 form-group">
                        <label>MAC Address<span class="red-required">*</span></label>
                        <input type="text" id="txtMACAddress" class="form-control" placeholder="MAC Address" required />
                    </div>

                    <div class="col-12 form-group">
                        <label>Type</label>
                        <select class="form-control" id="ddlType" required></select>
                    </div>

                    <div class="col-12 form-group">
                        <label>Default Carousel<span class="red-required">*</span></label>
                        <select class="form-control" id="ddlDefaultCarousel" required></select>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="SaveDevice();">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </form>
</div>