<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    @*  <!-- icheck bootstrap -->
    <link rel="stylesheet" href="../../plugins/icheck-bootstrap/icheck-bootstrap.min.css"> *@
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <link rel="stylesheet" href="~/plugins/toastr/toastr.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.min.css">
    <!-- jsGrid -->
    <link rel="stylesheet" href="~/plugins/jsgrid/jsgrid.min.css">
    <link rel="stylesheet" href="~/plugins/jsgrid/jsgrid-theme.min.css">
    <style>
        .content-wrapper {
            margin-left: 0px !important
        }

        .main-footer {
            margin-left: 0px !important
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/image/AdminLTELogo.png" alt="AdminLTELogo" height="60" width="60">
        </div>

        <div class="content-wrapper">
            @RenderBody()
        </div>

        <footer class="main-footer">
            <div class="float-right d-none d-sm-block"><b>Version</b> 3.1.0</div>
            <strong>
                Copyright &copy; 2014-2021
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </strong>
            All rights reserved.
        </footer>
    </div>

    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/js/adminlte.min.js"></script>
    <script src="~/plugins/toastr/toastr.min.js"></script>
    <script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/plugins/jquery-validation/additional-methods.min.js"></script>
    <script src="https://cdn.datatables.net/2.1.8/js/dataTables.min.js"></script>
    <script src="~/js/common/validation.js"></script>
    <script src="~/js/common/fileupload.js"></script>
    <script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script src="~/plugins/jsgrid/jsgrid.min.js"></script>

    <script>
        $(document).ready(function () {
            $.validator.setDefaults({
                focusInvalid: false,
                errorElement: 'span', // Default error element is a <span>
                errorPlacement: function (error, element) {
                    error.addClass('invalid-feedback'); // Add custom class to the error message
                    element.closest('.form-group').append(error); // Append error message to the closest .form-group
                },
                highlight: function (element, errorClass, validClass) {
                    $(element).addClass('is-invalid'); // Add invalid class to the input element
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).removeClass('is-invalid'); // Remove invalid class when the input is valid
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
