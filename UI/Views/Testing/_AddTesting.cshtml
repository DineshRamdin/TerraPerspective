@{
	Layout = null;
}

@using UI.Resources

<div class="modal-dialog">
	<form id="frnTestingCreate">
		<input type="hidden" id="hdnId" value="" />
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title" id="h4TestingTitle">
				</h4>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-12 form-group">
						<label>@SharedResource.Testing_Name<span class="red-required">*</span></label>
						<input type="text" id="txtTestingName" class="form-control" placeholder="@SharedResource.Testing_Name" required />
					</div>

					<div class="col-12 form-group">
						<label>@SharedResource.Testing_Type</label>
						<select class="form-control" id="ddlTestingType" required></select>
					</div>

					<div class="col-12 form-group">
						<label>@SharedResource.Testing_Code<span class="red-required">*</span></label>
						<input type="text" id="txtTestingCode" class="form-control" placeholder="@SharedResource.Testing_Code" required />
					</div>
					@* <div class="col-12 form-group">
						<label>Testing Date<span class="red-required">*</span></label>
						<input type="text" id="txtTestingDate" class="form-control" placeholder="Testing Date" required />
					</div> *@
					<div class="col-12 form-group">
						<label>@SharedResource.Testing_Date</label>
						<div class="input-group date" id="txtTestingDate" data-target-input="nearest">
							<input type="text" class="form-control datetimepicker-input" data-target="#txtTestingDate" />
							<div class="input-group-append" data-target="#txtTestingDate" data-toggle="datetimepicker">
								<div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
							</div>
						</div>
					</div>

					<div class="col-12 form-group">
						<label>@SharedResource.Description<span class="red-required">*</span></label>
						<input type="text" id="txtDescription" class="form-control" placeholder="@SharedResource.Description" required />
					</div>


				</div>
				<div class="row">
					<div class="col-3 form-group">
						<!-- checkbox -->
						<div class="form-group clearfix">
							<div class="icheck-primary d-inline">
								<input type="checkbox" id="IsTestingChk">
								<label for="IsTestingChk">
									@SharedResource.Is_Testing
								</label>
							</div>

						</div>
					</div>
					<div class="col-4 form-group">
						<!-- radio -->
						<div class="form-group clearfix">
							<div class="icheck-primary d-inline">
								<input type="radio" id="IsTestYesRD" name="r1" checked>
								<label for="IsTestYesRD">
									@SharedResource.Yes
								</label>
							</div>
							<div class="icheck-primary d-inline">
								<input type="radio" id="IsTestNoRD" name="r1">
								<label for="IsTestNoRD">
									@SharedResource.No
								</label>
							</div>

						</div>
					</div>
					<div class="col-5 form-group">

						<input type="checkbox" name="my-checkbox" id="IsTestCountchk" data-bootstrap-switch>
						<label for="IsTestCountchk">
							@SharedResource.Test_Count
						</label>
					</div>
				</div>
				<div class="row">
					<div class="col-12 row form-group">
						<div class="col-6">
							<label for="testingimagefile">@SharedResource.Testing_Image </label>
							<input type="file" id="testingimagefile" name="testingimagefile" accept="image/*" onchange="UploadFileisValidImageFormarJPEGAndPNG('testingimagefile')">
							<input type="hidden" id="oldtestingimage" value="" />
						</div>
						<div class="col-6">
							<img id="viewTestingImage" style="height: 80%;width: 80%;" />
						</div>
					</div>
				</div>

			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary" onclick="SaveTesting();">@SharedResource.Save</button>
				<button type="button" class="btn btn-default" data-dismiss="modal">@SharedResource.Close</button>
			</div>
		</div>
		<!-- /.modal-content -->
	</form>

</div>
