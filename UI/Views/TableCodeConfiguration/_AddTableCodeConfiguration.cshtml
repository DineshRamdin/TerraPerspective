@{
    Layout = null;
}
@using UI.Resources

<div class="modal-dialog">
    <form id="frnTaskCreate">
        <input type="hidden" id="hdnId" value="" />
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="h4TableCodeConfigurationTitle">
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                   
                    <div class="col-12 form-group">
                        <label>@SharedResource.Table_Name<span class="red-required">*</span></label>
                        <input type="text" id="txtTableName" class="form-control" placeholder=@SharedResource.Table_Name required />
                    </div>
                    <div class="col-12 form-group">
                        <label>@SharedResource.Prefix<span class="red-required">*</span></label>
                        <textarea type="text" id="txtPrefix" class="form-control" placeholder="@SharedResource.Prefix" required> </textarea>
                    </div>
                    <div class="col-12 form-group">
                        <label>@SharedResource.Company<span class="red-required">*</span></label>
                        <select class="form-control" id="ddlCompany" required></select>
                    </div>
                    <div class="col-12 form-group">
                        <label>@SharedResource.Configuration<span class="red-required">*</span></label>
                        <select class="form-control" id="ddlConfiguration" required></select>
                    </div>
                    <div class="col-12 form-group">
                        <label>@SharedResource.Comment<span class="red-required">*</span></label>
                        <textarea type="text" id="txtComment" class="form-control" placeholder="@SharedResource.Comment" required> </textarea>
                    </div>
                    <div class="col-12 form-group">
                        <div class="col-8">
                            <label>@SharedResource.HasAddi<span class="red-required">*</span></label>
                        </div>
                        <div class="col-4">
                            <input type="checkbox" id="chbHasAddi" class="form-control-sm" placeholder="@SharedResource.HasAddi" required />
                        </div>
                      
                       
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="SaveTableCodeConfiguration();">@SharedResource.Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">@SharedResource.Close</button>
            </div>
        </div>
    </form>
</div>